#!
PSQL_BIN=/usr/lib/postgresql/15/bin
PVE_CLUSTER_CONFIG=/etc/pve
PSQL_DATA=/data/psql
PSQL_USER='postgres'

PSQL_CLUSTER_CONFIG="$PVE_CLUSTER_CONFIG/psql"
PSQL_LOCAL_CONFIG="$PVE_CLUSTER_CONFIG/local/psql"
PSQL_CONF="$PSQL_CLUSTER_CONFIG/postgresql.conf"
PSQL_CLUSTER_PRIV="$PVE_CLUSTER_CONFIG/priv/psql"
PSQL_CLUSTER_PASSFILE="$PSQL_CLUSTER_PRIV/pgpass"
PSQL_SCRIPTS="$PSQL_CLUSTER_CONFIG/scripts"
REPMGR_CONF="$PSQL_CLUSTER_CONFIG/repmgr.conf"
PGBOUNCER_USERLIST="$PSQL_CLUSTER_PRIV/pgbouncer.userlist.txt"
PGBOUNCER_INI="$PSQL_CLUSTER_CONFIG/pgbouncer.ini"
PGBOUNCER_DATABASE_INI="$PSQL_CLUSTER_CONFIG/pgbouncer.database.ini"